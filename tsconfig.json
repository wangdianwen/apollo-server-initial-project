{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "outDir": "build",
        "lib": ["dom", "esnext"],
        "esModuleInterop": true,
        "strict": true,
        "allowJs": false,
        "removeComments": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": ["./src/*"],
            "*": ["node_modules"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts", "tests/**/*.ts", "webpack/webpack.common.ts"]
}
