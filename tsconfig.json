{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "build",
      "lib": [ "dom","es6" ],
      "esModuleInterop": true,
      "strict": true,
      "allowJs": false,
      "removeComments": true,
      "baseUrl": ".",
      "paths": {
        "@src/*": ["./src/*"],
        "*": ["node_modules"]
      }
    },
    "exclude": [ "node_modules" ],
    "include": [ "src/**/*.ts", "tests/**/*.ts", "webpack/webpack.common.ts" ]
}